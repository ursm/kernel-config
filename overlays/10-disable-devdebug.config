#
# Disable developer-only instrumentation and heavy debugging
# Keep runtime overhead low and avoid complex debug code paths.
#

# Sanitizers and memory debugging
CONFIG_KASAN=n
CONFIG_KCSAN=n
CONFIG_UBSAN=n
CONFIG_KFENCE=n
CONFIG_KCOV=n
CONFIG_GCOV_KERNEL=n

# Keep distribution debug menu as-is; disable costly sub-features explicitly

# Debug/testing/profiling features with runtime overhead (disabled)
CONFIG_SLUB_DEBUG=n
CONFIG_PAGE_POISONING=n
CONFIG_PAGE_OWNER=n
CONFIG_SCHEDSTATS=n
CONFIG_LATENCYTOP=n
CONFIG_PAGE_EXTENSION=n
CONFIG_DEBUG_LIST=n
CONFIG_ACPI_DEBUG=n
CONFIG_DEBUG_WX=n
CONFIG_DEBUG_BOOT_PARAMS=n
CONFIG_DEBUG_MEMORY_INIT=n
CONFIG_DEBUG_SHIRQ=n
CONFIG_PM_DEBUG=n
CONFIG_DM_DEBUG=n
CONFIG_FW_LOADER_DEBUG=n
CONFIG_KGDB=n
CONFIG_KUNIT=n
CONFIG_RUNTIME_TESTING_MENU=n
CONFIG_RCU_TRACE=n
CONFIG_KALLSYMS_ALL=n
CONFIG_PROFILING=n
